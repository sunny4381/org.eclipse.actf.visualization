      <artifactId>org.eclipse.actf.model.dom.dombycom</artifactId>
      <version>${version}</version>
      <scope>compile</scope>
    </dependency>
    <dependency>
      <groupId>org.eclipse.actf.common</groupId>
      <artifactId>org.eclipse.actf.model.dom.html</artifactId>
      <version>${version}</version>
      <scope>compile</scope>
    </dependency>
    <dependency>
      <groupId>org.eclipse.actf.common</groupId>
      <artifactId>org.eclipse.actf.model.ui</artifactId>
      <version>${version}</version>
      <scope>compile</scope>
    </dependency>
    <dependency>
      <groupId>org.eclipse.actf.common</groupId>
      <artifactId>org.eclipse.actf.ui</artifactId>
      <version>${version}</version>
      <scope>compile</scope>
    </dependency>
    <dependency>
      <groupId>org.eclipse.actf.common</groupId>
      <artifactId>org.eclipse.actf.util.vocab</artifactId>
      <version>${version}</version>
      <scope>compile</scope>
    </dependency>
